<h1>Create Posts</h1>
<div class="needs-validation" novalidation>
    <form action="/admin/posts/create" method="post" enctype="multipart/form-data">

        <div class="col-md-4 mb-3">
            <label for="title">Title</label>
            <input name="title" type="text" class="form-control" id="title" placeholder="enter title" required>
        </div>

        <div class="col-md-4 mb-3">
            <label for="file">Upload File</label>
            <input name="file" type="file" class="form-control" required>
        </div>

        <div class="col-md-4 mb-3">
            <label for="title">Label</label>

            <select name="status" id="status" class="form-control">
                <option value="aslihan">Aslihan</option>
                <option value="aygul">Aygul</option>
                <option value="bala">Bala</option>
                <option value="gonca">Gonca</option>
                <option value="halima">Halima</option>
                <option value="selcan">Selcan</option>
                <option value="malhun">Malhun</option>
                <option value="world">World</option>

            </select>

        </div>



        <div class="form-check">
            <label for="allowComments" class="form-check-label">

                <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments">

                Allow Comments

            </label>
        </div>

        <div class="form-group">
            <label for="body">Body</label>

            <textarea name="body" cols="30" rows="10" class="form-control" id="body" placeholder="enter description"
                required></textarea>

        </div>

        <button type="submit" class="btn btn-primary">Create Post</button>


    </form>
</div>